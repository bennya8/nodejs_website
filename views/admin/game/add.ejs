<% layout('../common/layout') -%>

<div class="container">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <div class="panel-title pull-left"><b><i class="glyphicon glyphicon-plus"></i> 添加游戏</b></div>
                <a class="btn btn-success btn-xs pull-right" href="/admin/game">游戏列表</a>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" method="post">
                    <div class="form-group">
                        <label class="col-md-2 control-label"></label>
                        <div class="col-md-8">
                            <% if(errors){ %>
                            <% errors.forEach(function(error){ %>
                            <p class="label label-danger"><%=error.msg%></p>
                            <% }) %>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">游戏名</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="title" value="<%=form.title%>" placeholder="请输入游戏名">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">类型</label>
                        <div class="col-md-8">
                            <select class="form-control" name="type">
                                <% types.forEach(function(type){ %>
                                <option <% if(type._id == form.type){ %>selected<% } %> value="<%=type._id%>"><%=type.name%></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">平台</label>
                        <div class="col-md-8">
                            <% platforms.forEach(function(platform){ %>
                            <label class="checkbox-inline">
                                <input type="checkbox" name="platform[]" value="<%=platform._id%>"> <%=platform.name%>
                            </label>
                            <% }) %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">发行商</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="publisher" value="<%=form.publisher%>" placeholder="请输入发行商">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">开发商</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="developer" value="<%=form.developer%>" placeholder="请输入开发商">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">封面</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="cover" value="<%=form.cover%>"  placeholder="请输入封面URL">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">发售日期</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="releaseAt" value="<%=form.releaseAt%>" placeholder="请输入发售日期">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-default">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>