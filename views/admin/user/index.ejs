<% layout('../common/layout') -%>

<div class="container">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <div class="panel-title pull-left"><b><i class="glyphicon glyphicon-list-alt"></i> 用户列表</b></div>
                <a class="btn btn-success btn-xs pull-right" href="/admin/user/add">添加用户</a>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form">
                    <div class="form-group">
                        <select class="form-control">
                            <option>用户名</option>
                            <option>昵称</option>
                            <option>手机</option>
                            <option>电子邮箱</option>
                            <option>不限</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="请输入搜索关键字">
                    </div>
                    <button type="submit" class="btn btn-default">搜索</button>
                </form>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>用户名</th>
                        <th>昵称</th>
                        <th>手机</th>
                        <th>电子邮箱</th>
                        <th>管理</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(users) { %>
                    <% users.forEach(function(user){ %>
                    <tr>
                        <td><%=user._id %></td>
                        <td><%=user.username %></td>
                        <td><%=user.nickname %></td>
                        <td><%=user.mobile %></td>
                        <td><%=user.email %></td>
                        <td>
                            <a href="#" class="btn btn-xs btn-warning">编辑</a>
                            <a href="#" class="btn btn-xs btn-danger">删除</a>
                        </td>
                    </tr>
                    <% }) %>
                    <% } else { %>
                    <tr>
                        <th rowspan="7">暂无记录</th>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>